{
	"name": "natanfelles/debug",
	"type": "library",
	"description": "The Framework Debug Library",
	"keywords": [
		"debug",
		"timer",
		"error_handler",
		"exception_handler"
	],
	"homepage": "https://the-framework.gitlab.io/libraries/debug.html",
	"license": "MIT",
	"authors": [
		{
			"name": "Natan Felles",
			"email": "natanfelles@gmail.com",
			"homepage": "https://natanfelles.github.io"
		}
	],
	"require": {
		"php": ">=8.0",
		"natanfelles/cli": "^1.12",
		"natanfelles/helpers": "^2.1",
		"natanfelles/language": "^1.3",
		"natanfelles/log": "^2.0"
	},
	"require-dev": {
		"ext-xdebug": "*",
		"ergebnis/composer-normalize": "^2.15",
		"jetbrains/phpstorm-attributes": "^1.0",
		"natanfelles/coding-standard": "^1.7",
		"phpmd/phpmd": "^2.10",
		"phpstan/phpstan": "^0.12",
		"phpunit/phpunit": "^9.5"
	},
	"config": {
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true
	},
	"autoload": {
		"psr-4": {
			"Framework\\Debug\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Debug\\": "tests/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"support": {
		"email": "natanfelles@gmail.com",
		"issues": "https://gitlab.com/the-framework/libraries/debug/issues",
		"wiki": "https://gitlab.com/the-framework/libraries/debug/wikis/home",
		"source": "https://gitlab.com/the-framework/libraries/debug",
		"docs": "https://the-framework.gitlab.io/libraries/debug/docs/"
	}
}
